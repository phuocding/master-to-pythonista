        b.write("\n")
        b.write(diet2)
        b.write(" ")
        b.write(":")
        b.write(time3)
    if key2==2:
        print("You Choosed Exersise ")
        print("----------------------")
        print("Please Enter The Exersise Done")
        ex2=input()
        print("Please Enter The Day")
        time4=input()
        c=open("RitujaExersise.txt","a")
        c.write("\n")
        c.write(ex2)
        c.write(" ")
        c.write(":")
        c.write(time4)

if press==3:
    print("You Choosed Ritam")
    func()
